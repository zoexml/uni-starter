{
  // 配置语言的文件关联
  "files.associations": {
    "pages.json": "jsonc", // pages.json 可以写注释
    "manifest.json": "jsonc"// manifest.json 可以写注释
  },

  // Auto fix
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },

  // Disable the default formatter, use eslint instead
  "prettier.enable": false,
  "editor.formatOnSave": false,

  // Enable eslint for all supported languages
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "nvue",
    "uvue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml",
    "xml",
    "gql",
    "graphql",
    "astro",
    "svelte",
    "css",
    "less",
    "scss",
    "pcss",
    "postcss"
  ],

  "stylelint.validate": ["css", "less", "postcss", "scss", "vue", "sass", "vue", "html"],

  // Enable file nesting
  "explorer.fileNesting.enabled": true, // 开启文件嵌套
  "explorer.fileNesting.patterns": {
    ".env": ".env.*",
    "tsconfig.json": "tsconfig.*.json, env.d.ts, .npmrc, .nvmrc",
    "vite.config.*": "pages.config.*, manifest.config.*, uno.config.*, volar.config.*,",
    "package.json": "package-lock.json, pnpm*",
    "eslint.config.mjs": "commitlint.config.js, stylelint.config.mjs, .git-cz.json, .editorconfig",
    "README.md": "index.html,favicon.ico,robots.txt,CHANGELOG.md,LICENSE*,.versionrc"
  },
  "cSpell.words": [
    "alova",
    "apifox",
    "autoscan",
    "dcloudio",
    "demi",
    "easycom",
    "Inited",
    "tabbar",
    "Uniapp",
    "unplugin",
    "vueuse",
    "weixin"
  ]
}
